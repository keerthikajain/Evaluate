
pipeline {
    agent any


tools {
        nodejs "nodejs"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/keerthikajain/Evaluate.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test || echo "No tests defined"'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
    }
}








    
